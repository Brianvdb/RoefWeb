
<form class="form-horizontal" method="POST" action="/weekstaat">

    <div class="page-header">
        <div class="pull-left">
            <h2>Weekstaat opvragen</h2>
        </div>
        <div class="pull-right">
            <div class="btn-group">
                <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-export" aria-hidden="true"></span></button>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>

    {{#if status}}
        <div class="alert alert-info" role="alert">{{status}}</div>        
    {{/if}}

    <div class="form-group">
        <label class="control-label col-sm-2" for="inputKlant">Klant:</label>
        <div class="col-sm-10 row-fluid">
            <select class="selectpicker form-control" data-live-search="true" name="inputKlant" id="inputKlant" required>
            {{#each klanten}}
                <option value="{{this.id}}">{{this.naam}}</option>
            {{/each}}
          </select>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" for="inputWeek">Week:</label>
        <div class="col-sm-10">
            <input type="week" class="form-control" startdate="1" name="inputWeek" id="inputWeek" placeholder="Week" required/>
        </div>
    </div>

</form>