{{#if kenteken}}
<form class="form-horizontal" method="POST" action="/kenteken/{{kenteken.id}}">
{{else}}
<form class="form-horizontal" method="POST" action="/kenteken/0">
{{/if}}

    <div class="page-header">
        <div class="pull-left">
            {{#if kenteken}}
                <h2>{{kenteken.kenteken}}</h2>
            {{else}}
                <h2>Nieuw kenteken</h2>
            {{/if}}
        </div>
        <div class="pull-right">
            <div class="btn-group">
                <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-floppy-disk" aria-hidden="true" title="Opslaan"></span></button>
                {{#if kenteken}}
                    <a type="button" href="/kenteken/{{kenteken.id}}/delete" onclick="return confirm('Weet je zeker dat je dit item wil verwijderen?')" class="btn btn-danger" title="Verwijderen"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                {{/if}}
            </div>
        </div>
        <div class="clearfix"></div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" for="inputKenteken">Kenteken:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="inputKenteken" id="inputKenteken" placeholder="Kenteken" value="{{kenteken.kenteken}}" required/>
        </div>
    </div>

</form>