{{#if klant}}
<form class="form-horizontal" method="POST" action="/klant/{{klant.id}}">
{{else}}
<form class="form-horizontal" method="POST" action="/klant/0">
{{/if}}

    <div class="page-header">
        <div class="pull-left">
            {{#if klant}}
                <h2>{{klant.naam}}</h2>
            {{else}}
                <h2>Nieuwe Klant</h2>
            {{/if}}
        </div>
        <div class="pull-right">
            <div class="btn-group">
                <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-floppy-disk" aria-hidden="true" title="Opslaan"></span></button>
                {{#if klant}}
                    <a type="button" href="/klant/{{klant.id}}/delete" onclick="return confirm('Weet je zeker dat je dit item wil verwijderen?')" class="btn btn-danger" title="Verwijderen"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                {{/if}}
            </div>
        </div>
        <div class="clearfix"></div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" for="inputNaam">Naam:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="inputNaam" id="inputNaam" placeholder="Naam" value="{{klant.naam}}" required/>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" for="inputWoonplaats">Woonplaats:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="inputWoonplaats" id="inputWoonplaats" placeholder="Naam" value="{{klant.woonplaats}}" required/>
        </div>
    </div>

</form>