{{#if medewerker}}
<form class="form-horizontal" method="POST" action="/personeel/{{medewerker.id}}">
{{else}}
<form class="form-horizontal" method="POST" action="/personeel/0">
{{/if}}

    <div class="page-header">
        <div class="pull-left">
            {{#if medewerker}}
                <h2>{{medewerker.achternaam}}, {{medewerker.voornaam}} {{medewerker.tussenvoegsel}}</h2>  
            {{else}}
                <h2>Nieuwe medewerker</h2>
            {{/if}}
        </div>
        <div class="pull-right">
            <div class="btn-group">
                <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-floppy-disk" aria-hidden="true" title="Opslaan"></span></button>
                {{#if medewerker}}
                    <a type="button" href="/personeel/{{medewerker.id}}/logout" onclick="return confirm('Weet je zeker dat je deze gebruiker overal wil uitloggen?')" class="btn btn-primary" title="Gebruiker overal uitloggen"><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span></a>
                    <a type="button" href="/personeel/{{medewerker.id}}/delete" onclick="return confirm('Weet je zeker dat je dit item wil verwijderen?')" class="btn btn-danger" title="Verwijderen"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                {{/if}}
            </div>
        </div>
        <div class="clearfix"></div>
    </div>

    {{#if error}}
        <div class="alert alert-danger" role="alert">{{error}}</div>
    {{/if}}

    {{#if success}}
        <div class="alert alert-success" role="alert">{{success}}</div>        
    {{/if}}

    

    <div class="form-group">
        <label class="control-label col-sm-2" for="inputVoornaam">Voornaam:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="inputVoornaam" id="inputVoornaam" placeholder="Voornaam" value="{{medewerker.voornaam}}" required/>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" for="inputTussenvoegsel">Tussenvoegsel:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="inputTussenvoegsel" id="inputTussenvoegsel" placeholder="Tussenvoegsel" value="{{medewerker.tussenvoegsel}}"/>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" for="inputAchternaam">Achternaam:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="inputAchternaam" id="inputAchternaam" placeholder="Achternaam" value="{{medewerker.achternaam}}" required/>
        </div>
    </div>

    <div class="form-group">
                <label class="control-label col-sm-2" for="inputRol">Rol:</label>
                <div class="col-sm-10">
                <select class="form-control" name="inputRol" id="inputRol" required>
                    
                            {{#each rollen}}
                                {{#ifEq this.id ../medewerker.rol_id}}
                                    <option value="{{this.id}}" selected="selected">{{this.naam}}</option>
                                {{else}}
                                    <option value="{{this.id}}">{{this.naam}}</option>
                                {{/ifEq}}
                            {{/each}}
                        </select>
                </div>
            </div>

    <div class="form-group">
        <label class="control-label col-sm-2" for="inputGebruikersnaam">Gebruikersnaam:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="inputGebruikersnaam" id="inputGebruikersnaam" placeholder="Gebruikersnaam" value="{{medewerker.gebruikersnaam}}" required/>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" for="inputWachtwoord">Nieuw Wachtwoord:</label>
        <div class="col-sm-10">
            {{#if medewerker}}
                <input type="password" class="form-control" name="inputWachtwoord" id="inputWachtwoord" placeholder="Nieuw wachtwoord"/>
            {{else}}
                <input type="password" class="form-control" name="inputWachtwoord" id="inputWachtwoord" placeholder="Nieuw wachtwoord" required/>
            {{/if}}
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" for="inputWachtwoordRepeat">Herhaal Wachtwoord:</label>
        <div class="col-sm-10">
            {{#if medewerker}}
                <input type="password" class="form-control" name="inputWachtwoordRepeat" id="inputWachtwoordRepeat" placeholder="Herhaal nieuw wachtwoord" />
            {{else}}
                <input type="password" class="form-control" name="inputWachtwoordRepeat" id="inputWachtwoordRepeat" placeholder="Herhaal nieuw wachtwoord" required/>
            {{/if}}
        </div>
    </div>

</form>