<script type="text/javascript" charset="utf-8">
	$(document).ready(function() {
	    $('#table').DataTable();
	} );
</script>

<div class="page-header"><h2>Dagstaten</h2></div>

<ul class="list-group">

    <table id="table" class="cell-border" cellspacing="0" rowspacing="1" width="100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Woonplaats</th>
                <th>Transporteur</th>
                <th>Uitvoerder</th>
                <th>Chauffeur</th>
                <th>Acties</th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
                <tr class="spaceUnder">
                    <td>{{this.id}}</td>
                    <td>{{this.woonplaats}}</td>
                    <td>{{this.transporteur}}</td>
                    <td>{{this.naam_uitvoerder}}</td>
                    <td>{{this.naam_chauffeur}}</td>
                    <td>
                        <div class="btn-group">
                            <a type="button" href="/dagstaat/{{this.id}}" class="btn btn-primary"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                            <a type="button" href="/dagstaat/{{this.id}}/export" class="btn btn-primary"><span class="glyphicon glyphicon-export" aria-hidden="true"></span></a>
                            <a type="button" href="/dagstaat/{{this.id}}/delete" onclick="return confirm('Weet je zeker dat je dit item wil verwijderen?')" class="btn btn-danger"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                        </div>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>

</ul>