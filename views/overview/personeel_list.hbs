<script type="text/javascript" charset="utf-8">
	$(document).ready(function() {
	    $('#table').DataTable();
	} );
</script>

<ul class="list-group">

    <table id="table" class="cell-border" cellspacing="0" rowspacing="1" width="100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Naam</th>
                <th>Rol</th>
                <th><a type="button" href="/personeel/0" class="btn btn-primary pull-right"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a></th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
                <tr class="spaceUnder">
                    <td>{{this.id}}</td>
                    <td>{{this.achternaam}}, {{this.voornaam}} {{this.tussenvoegsel}}</td>
                    <td>{{this.rolnaam}}</td>
                    <td>
                        <div class="btn-group pull-right">
                            <a type="button" href="/personeel/{{this.id}}" class="btn btn-primary"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                            <a type="button" href="/personeel/{{this.id}}/delete" onclick="return confirm('Weet je zeker dat je dit item wil verwijderen?')" class="btn btn-danger"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                        </div>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>

</ul>