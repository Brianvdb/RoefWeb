

<form class="form-horizontal" method="POST" action="/dagstaat/{{dagstaat.id}}">

    

  <ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#dagstaat">Dagstaat</a></li>
    <li><a data-toggle="tab" href="#ritten">Ritten</a></li>
    <li class="pull-right">
        <div class="btn-group">
            <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span></button>
            <a type="button" href="/dagstaat/{{dagstaat.id}}/delete" onclick="return confirm('Weet je zeker dat je dit item wil verwijderen?')" class="btn btn-danger"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
        </div>
    </li>
</ul>

    <input type="hidden" name="inputId" value="{{dagstaat.id}}"/>

    <div class="tab-content">
        <div id="dagstaat" class="tab-pane fade in active">
            <div class="form-group">
                <label class="control-label col-sm-2" for="inputKlant">Klant:</label>
                <div class="col-sm-10">
                <select class="form-control" name="inputKlant" id="inputKlant">
                    
                            {{#each klanten}}
                                {{#ifEq this.id ../dagstaat.klant_id}}
                                    <option value="{{this.id}}" selected="selected">{{this.naam}}</option>
                                {{else}}
                                    <option value="{{this.id}}">{{this.naam}}</option>
                                {{/ifEq}}
                            {{/each}}
                        </select>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="inputWoonplaats">Woonplaats:</label>
                <div class="col-sm-10">
                <input type="text" class="form-control" name="inputWoonplaats" id="inputWoonplaats" placeholder="Woonplaats" value="{{dagstaat.woonplaats}}"/>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="inputDatum">Datum:</label>
                <div class="col-sm-10">
                <input class="form-control" type="date" name="inputDatum" value="{{dagstaat.datum}}" id="inputDatum"/>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="inputAfgifte">Werkbonnen afgifte:</label>
                <div class="col-sm-10">
                <input type="text" class="form-control" name="inputAfgifte" id="inputAfgifte" placeholder="Afgifte" value="{{dagstaat.afgifte}}"/>
                </div> 
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="inputTransporteur">Transporteur:</label>
                <div class="col-sm-10">
                <input type="text" class="form-control" name="inputTransporteur" id="inputTransporteur" placeholder="Transporteur" value="{{dagstaat.transporteur}}"/>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="inputKenteken">Kenteken:</label>
                <div class="col-sm-10">
                <select class="form-control" name="inputKenteken" id="inputKenteken">
                     
                            {{#each kentekens}}
                                {{#ifEq this.id ../dagstaat.kenteken_id}}
                                    <option value="{{this.id}}" selected="selected">{{this.kenteken}}</option>
                                {{else}}
                                    <option value="{{this.id}}">{{this.kenteken}}</option>
                                {{/ifEq}}
                            {{/each}}
                        </select>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="inputWagen">Wagen:</label>
                <div class="col-sm-10">
                <select class="form-control" name="inputWagen" id="inputWagen">
                     
                            {{#each wagens}}
                                {{#ifEq this.id ../dagstaat.kenteken_id}}
                                    <option value="{{this.id}}" selected="selected">{{this.type}}</option>
                                {{else}}
                                    <option value="{{this.id}}">{{this.type}}</option>
                                {{/ifEq}}
                            {{/each}}
                        </select>
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-sm-2" for="inputOpmerking">Opmerkingen:</label>
                <div class="col-sm-10">
                <textarea type="text" class="form-control" name="inputOpmerking" id="inputOpmerking" placeholder="Opmerkingen">{{dagstaat.opmerking}}</textarea>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="inputNaamUitvoerder">Naam uitvoerder:</label>
                <div class="col-sm-10">
                <input type="text" class="form-control" name="inputNaamUitvoerder" id="inputNaamUitvoerder" placeholder="Naam uitvoerder" value="{{dagstaat.naam_uitvoerder}}"/>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="inputNaamChauffeur">Naam chauffeur:</label>
                <div class="col-sm-10">
                <input type="text" class="form-control" name="inputNaamChauffeur" id="inputNaamChauffeur" placeholder="Naam Chauffeur" value="{{dagstaat.naam_chauffeur}}"/>
                </div>
            </div>




        </div>
        <div id="ritten" class="tab-pane fade">
        
            <input type="hidden" name="inputRitten" value="{{dagstaat.ritten.length}}"/>
            <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">

                {{#each dagstaat.ritten}}

                    <div class="panel panel-default">
                        <div class="panel-heading" role="tab" id="heading_{{this.id}}">
                        <h4 class="panel-title">
                            <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse_{{this.id}}" aria-expanded="false" aria-controls="collapse_{{this.id}}">
                                Rit {{this.id}}
                            </a>
                        </h4>
                        </div>
                        <div id="collapse_{{this.id}}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading_{{this.id}}">
                        <div class="panel-body">
                            
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="inputOpdrachtgever_{{this.id}}">Opdrachtgever:</label>
                                <div class="col-sm-10">
                                <input type="text" name="inputOpdrachtgever_{{this.id}}" class="form-control" id="inputOpdrachtgever_{{this.id}}" placeholder="Opdrachtgever" value="{{this.opdrachtgever}}"/>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-sm-2" for="inputLaadplaats_{{this.id}}">Laadplaats:</label>
                                <div class="col-sm-10">
                                <input type="text" class="form-control" name="inputLaadplaats_{{this.id}}" id="inputLaadplaats_{{this.id}}" placeholder="Laadplaats" value="{{this.laadplaats}}"/>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-sm-2" for="inputLaadplaatsAankomst_{{this.id}}">Laadplaats aankomst:</label>
                                <div class="col-sm-10">
                                <input type="time" class="form-control" name="inputLaadplaatsAankomst_{{this.id}}" id="inputLaadplaatsAankomst_{{this.id}}" placeholder="Laadplaats aankomst" value="{{this.laadplaats_aankomst}}"/>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-sm-2" for="inputLaadplaatsVertrek_{{this.id}}">Laadplaats vertrek:</label>
                                <div class="col-sm-10">
                                <input type="time" class="form-control" name="inputLaadplaatsVertrek_{{this.id}}" id="inputLaadplaatsVertrek_{{this.id}}" placeholder="Laadplaats vertrek" value="{{this.laadplaats_vertrek}}"/>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-sm-2" for="inputLosplaats_{{this.id}}">Losplaats:</label>
                                <div class="col-sm-10">
                                <input type="text" class="form-control" name="inputLosplaats_{{this.id}}" id="inputLosplaats_{{this.id}}" placeholder="Losplaats" value="{{this.losplaats}}"/>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-sm-2" for="inputLosplaatsAankomst_{{this.id}}">Losplaats aankomst:</label>
                                <div class="col-sm-10">
                                <input type="time" class="form-control" name="inputLosplaatsAankomst_{{this.id}}" id="inputLosplaatsAankomst_{{this.id}}" placeholder="Losplaats aankomst" value="{{this.losplaats_aankomst}}"/>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-sm-2" for="inputLosplaatsVertrek_{{this.id}}">Losplaats vertrek:</label>
                                <div class="col-sm-10">
                                <input type="time" class="form-control" name="inputLosplaatsVertrek_{{this.id}}" id="inputLosplaatsVertrek_{{this.id}}" placeholder="Losplaats vertrek" value="{{this.losplaats_vertrek}}"/>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-sm-2" for="inputLading_{{this.id}}">Lading:</label>
                                <div class="col-sm-10">
                                <input type="text" class="form-control" name="inputLading_{{this.id}}" id="inputLading_{{this.id}}" placeholder="Lading" value="{{this.lading}}"/>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-sm-2" for="inputHoeveelheid_{{this.id}}">Hoeveelheid:</label>
                                <div class="col-sm-10">
                                <input type="number" class="form-control" name="inputHoeveelheid_{{this.id}}" id="inputHoeveelheid_{{this.id}}" placeholder="Lading" value="{{this.hoeveelheid}}"/>
                                </div>
                            </div>

                        </div>
                        </div>
                    </div>

                {{/each}}

        </div>
    </div>

</form>

